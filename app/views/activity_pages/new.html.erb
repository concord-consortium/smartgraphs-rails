<h1>New Page for <%=h @activity.title %></h1>

<% form_for(@page) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :intro_text %><br />
    <%= f.text_area :intro_text %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', activity_pages_path(@activity) %>
